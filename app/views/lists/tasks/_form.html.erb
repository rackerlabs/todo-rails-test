<div class="bookForm">
  <%= form_for([@list, @task]) do |f| %>
    <%= link_to 'Back', list_tasks_path(@list), class: "btn btn-info" %>
    <% if @task.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>
        <ul>
          <% @task.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, required: true, class: "form-control" %>
    </div>
    <div class="field">
      <%= f.label :due_date %><br />
      <%= f.date_field :due_date, required: true, class: "form-control" %>
    </div>
    <div class="field">
      <%= f.label :complete, "Complete?" %><br />
      <%= f.check_box :complete %>
    </div>
    <div class="actions">
      <%= f.submit "Create Task", class: "btn btn-primary mt-4" %>
    </div>
  <% end %>
</div>
